<div class="d-flex align-items-center justify-content-center vh-100" 
     style="background: url(<%= asset_path 'library.jpg' %>) no-repeat center center; background-size: cover;">
  <div class="card shadow-lg p-4" 
       style="max-width: 400px; width: 100%; background: rgba(255, 255, 255, 0.85); border-radius: 15px;">
    
    <h2 class="text-center mb-4 fw-bold">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- show errors (e.g., email already taken) -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- email field -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- password field -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- confirm password -->
      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- create account -->
      <div class="d-grid">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <!-- links back to login, forgot password, etc. -->
    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
